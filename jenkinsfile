pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = 'scientific_calculator'
        GITHUB_REPO_URL = 'https://github.com/AbhishekRauthan909/scientific_calculator.git'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }
        stage('Maven Build')
        {
           steps
           {
              script
              {
                 sh 'mvn clean install'
              }
           }
        }
        stage('Build Docker Image') {
            steps {
                sh '/usr/local/bin/docker build -t scientific_calculator .'
            }
        }
        stage('Push Docker Images') {
            steps {
                script {
                    // Tag and push Docker image to Docker Hub
                    docker.withRegistry('', 'DockerHubCred') {
                        sh "docker tag ${DOCKER_IMAGE_NAME} abhishekrauthan2023106/${DOCKER_IMAGE_NAME}:latest"
                        sh "docker push abhishekrauthan2023106/${DOCKER_IMAGE_NAME}:latest"
                    }
                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    def ansibleCommand = "/opt/homebrew/bin/ansible-playbook -i inventory deploy.yml"
                    sh ansibleCommand
                }
            }
        }
    }
}